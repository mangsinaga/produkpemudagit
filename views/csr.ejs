<style>
  .csr-hero-section {
    background: var(--primary-color, #4A0E19);
    min-height: 70vh;
    display: flex;
    align-items: center;
    position: relative;
    overflow: hidden;
    padding-top: 150px;
    padding-bottom: 100px;
  }
  .csr-hero-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('/img/all-images/bg/hero-bg1.png') center/cover no-repeat;
    opacity: 0.1;
  }
  .csr-hero-heading h5 {
    color: var(--accent-color, #C6A667);
    font-weight: 600;
    letter-spacing: 2px;
    text-transform: uppercase;
  }
  .csr-hero-heading h1 {
    color: #fff;
    font-size: 3.5rem;
    font-weight: 700;
    line-height: 1.2;
  }
  .csr-hero-heading p {
    color: var(--secondary-color, #F7F5F2);
    font-size: 1.15rem;
    line-height: 1.8;
  }
  .csr-focus-card {
    background: #fff;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 10px 40px rgba(0,0,0,0.08);
    transition: all 0.4s ease;
    height: 100%;
  }
  .csr-focus-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 50px rgba(74,14,25,0.15);
  }
  .csr-focus-card .card-img {
    height: 220px;
    overflow: hidden;
    position: relative;
  }
  .csr-focus-card .card-img img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }
  .csr-focus-card:hover .card-img img {
    transform: scale(1.1);
  }
  .csr-focus-card .card-img .overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(to bottom, transparent 50%, rgba(74,14,25,0.7));
  }
  .csr-focus-card .card-content {
    padding: 28px;
  }
  .csr-focus-card .card-content h4 {
    font-size: 1.4rem;
    font-weight: 700;
    color: var(--primary-color, #4A0E19);
    margin-bottom: 12px;
  }
  .csr-focus-card .card-content p {
    color: #666;
    line-height: 1.7;
    margin-bottom: 20px;
  }
  .csr-focus-card .learn-more {
    color: var(--primary-color, #4A0E19);
    font-weight: 600;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    transition: gap 0.3s ease;
  }
  /* Override heading5 h5 untuk halaman CSR */
  .heading5 h5 {
    background: rgba(198, 166, 103, 0.15) !important;
    color: var(--accent-color, #C6A667) !important;
  }
  .csr-focus-card .learn-more:hover {
    gap: 12px;
    color: var(--accent-color, #C6A667);
  }
  .csr-impact-section {
    background: linear-gradient(135deg, #F7F5F2 0%, #efe9df 100%);
  }
  .csr-impact-box {
    text-align: center;
    padding: 40px 30px;
    background: #fff;
    border-radius: 16px;
    box-shadow: 0 5px 25px rgba(0,0,0,0.05);
    transition: all 0.3s ease;
  }
  .csr-impact-box:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 35px rgba(74,14,25,0.1);
  }
  .csr-impact-box .number {
    font-size: 3rem;
    font-weight: 800;
    color: var(--primary-color, #4A0E19);
    line-height: 1;
  }
  .csr-impact-box .label {
    color: #666;
    font-size: 1rem;
    margin-top: 10px;
  }
  .csr-values-card {
    background: #fff;
    padding: 35px;
    border-radius: 16px;
    box-shadow: 0 5px 25px rgba(0,0,0,0.05);
    height: 100%;
    border-left: 4px solid var(--accent-color, #C6A667);
    transition: all 0.3s ease;
  }
  .csr-values-card:hover {
    box-shadow: 0 15px 40px rgba(74,14,25,0.1);
  }
  .csr-values-card .icon {
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, var(--primary-color, #4A0E19) 0%, #6b1a28 100%);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 20px;
  }
  .csr-values-card .icon i {
    color: #fff;
    font-size: 1.5rem;
  }
  .csr-values-card h5 {
    font-weight: 700;
    color: var(--primary-color, #4A0E19);
    margin-bottom: 12px;
  }
  .csr-values-card p {
    color: #666;
    line-height: 1.7;
    margin: 0;
  }
  .csr-cta-section {
    background: linear-gradient(135deg, var(--primary-color, #4A0E19) 0%, #2d0810 100%);
    position: relative;
  }
  .csr-cta-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('/img/all-images/bg/bg5.png') center/cover no-repeat;
    opacity: 0.1;
  }
  .heading4 h5 {
    color: var(--primary-color, #4A0E19);
  }
</style>

<%- contentFor('content') %>
