<style>
  .news-category-badge {
    display: inline-block;
    padding: 6px 16px;
    background: var(--accent-color);
    color: var(--primary-color);
    border-radius: 20px;
    font-size: 14px;
    font-weight: 600;
    margin-bottom: 16px;
  }
  .news-category-badge.event {
    background: var(--primary-color);
    color: var(--white);
  }
  .blog-main-detailsarea h3 {
    color: var(--primary-color);
  }
  .service-details-box {
    background: var(--secondary-color);
    padding: 24px;
    border-radius: 12px;
    margin-top: 24px;
  }
  .service-details-box h4 {
    color: var(--primary-color);
  }
  .tags-social {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    padding: 24px 0;
    border-top: 1px solid #eee;
    border-bottom: 1px solid #eee;
    margin-top: 32px;
  }
  .tags ul, .social ul {
    display: flex;
    align-items: center;
    gap: 8px;
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .tags ul li a, .social ul li a {
    padding: 6px 12px;
    background: var(--secondary-color);
    border-radius: 20px;
    font-size: 13px;
    color: var(--primary-color);
  }
  .social ul li a {
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
  }
  .social ul li a:hover {
    background: var(--primary-color);
    color: var(--white);
  }
  .recent-posts {
    display: flex;
    gap: 16px;
    margin-bottom: 20px;
  }
  .recent-posts .img1 {
    width: 80px;
    height: 80px;
    border-radius: 8px;
    overflow: hidden;
    flex-shrink: 0;
  }
  .recent-posts .img1 img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .recent-posts .content h4 {
    font-size: 15px;
    line-height: 1.4;
  }
  .recent-posts .content h4 a {
    color: var(--text-color);
  }
  .recent-posts .content h4 a:hover {
    color: var(--primary-color);
  }
  .categories-area ul {
    list-style: none;
    padding: 0;
  }
  .categories-area ul li {
    border-bottom: 1px solid #eee;
  }
  .categories-area ul li a {
    display: flex;
    justify-content: space-between;
    padding: 12px 0;
    color: var(--text-color);
  }
  .categories-area ul li a:hover {
    color: var(--primary-color);
  }
  .help-area {
    background: var(--primary-color);
    padding: 30px;
    border-radius: 12px;
    text-align: center;
  }
  .help-area h3 {
    color: var(--white);
  }
  .help-area .btn-area1 a {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: var(--accent-color);
    color: var(--primary-color);
    padding: 12px 24px;
    border-radius: 30px;
    font-weight: 600;
  }
</style>

