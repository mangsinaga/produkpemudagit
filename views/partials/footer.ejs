<!-- Lightbox Script -->
<script>
$(document).ready(function() {
  // Initialize magnificPopup for gallery
  $('.footer-img a[data-lightbox]').magnificPopup({
    type: 'image',
    gallery: {
      enabled: true,
      navigateByImgClick: true,
      preload: [0,1]
    },
    image: {
      titleSrc: function(item) {
        return item.el.attr('title');
      }
    }
  });
});
</script>