<%- contentFor('extra_css') %>
<style>
  .project-single-boxarea2 .content-area {
    align-items: flex-start !important;
  }
  .detail-link {
    text-align: left;
  }
  .detail-link a:hover {
    text-decoration: underline !important;
  }
  .filter-buttons {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 12px;
    margin-bottom: 40px;
  }
  .filter-btn {
    padding: 12px 28px;
    border: 2px solid var(--primary-color);
    background: transparent;
    color: var(--primary-color);
    border-radius: 30px;
    font-weight: 600;
    font-size: 14px;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  .filter-btn:hover,
  .filter-btn.active {
    background: var(--primary-color);
    color: var(--white);
  }
  #product-grid {
    display: flex;
    flex-wrap: wrap;
  }
  .product-item {
    transition: opacity 0.3s ease;
    margin-bottom: 24px;
    display: flex;
  }
  .product-item.hidden {
    display: none !important;
  }
  .product-item .project-single-boxarea2 {
    display: flex;
    flex-direction: column;
    height: 100%;
    width: 100%;
  }
  .product-item .content-area {
    flex: 1;
    display: flex;
    flex-direction: column;
  }
  .product-item .content-area .text {
    flex: 1;
  }
  .product-badge {
    position: absolute;
    top: 16px;
    left: 16px;
    padding: 6px 16px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 600;
    z-index: 2;
  }
  .badge-available {
    background: #28a745;
    color: white;
  }
  .badge-coming {
    background: var(--accent-color);
    color: var(--primary-color);
  }
  .badge-future {
    background: #17a2b8;
    color: white;
  }
  .project-single-boxarea2 {
    position: relative;
  }
  .project-single-boxarea2 .img1 {
    position: relative;
    overflow: hidden;
    border-radius: 16px;
  }
  .project-single-boxarea2 .img1 img {
    width: 100%;
    height: 220px;
    object-fit: cover;
  }
  .category-tag {
    display: inline-block;
    padding: 4px 12px;
    background: rgba(74, 14, 25, 0.1);
    color: var(--primary-color);
    border-radius: 20px;
    font-size: 12px;
    font-weight: 500;
    margin-bottom: 8px;
  }
  .product-description {
    color: var(--text-light);
    font-size: 14px;
    line-height: 1.6;
    margin-top: 12px;
  }
  .no-products {
    text-align: center;
    padding: 60px 20px;
    color: var(--text-light);
    width: 100%;
  }
  .no-products i {
    font-size: 48px;
    color: var(--accent-color);
    margin-bottom: 20px;
  }
  
  /* Mobile adjustments for inner pages */
  @media (max-width: 768px) {
    .inner-pages-section-area {
      padding: 120px 0 30px!important;
      min-height: 200px !important;
    }
    
    .inner-header h2 {
      font-size: 28px !important;
    }
  }
</style>

<%- contentFor('content') %>
